datasource db {
  provider = "sqlite"
  url      = "file:../usr-dat/Data.db"
}

generator client {
  provider = "cargo prisma"
  output   = "../src-tauri/src/client.rs"
}

model File {
  id   Int    @id @default(autoincrement())
  name String
  ext  String
  size Int
}

model Folder {
  id       Int     @id @default(autoincrement())
  name     String
  path     String
  favorite Boolean
}
